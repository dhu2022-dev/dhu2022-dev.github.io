---
const { items = [] } = Astro.props;
---

<div class="creditsContainer">
  <div class="creditsHeader">
    <div class="creditsTitle">Cinematic Mode</div>
    <div class="creditsControls">
      <button type="button" class="creditsButton" id="creditsPause">Pause</button>
      <button type="button" class="creditsButton" id="creditsPlay" style="display:none;">Play</button>
    </div>
  </div>

  <div class="creditsViewport">
    <div class="creditsRoll" id="creditsRoll">
      <div style="height: 140px;"></div>

      {items.map((m) => (
        <button
          type="button"
          class="creditLine"
          data-template={m.templateId}
        >
          <span class="creditTitle">{m.title}</span>
          {m.year ? <span class="creditMeta"> · {m.year}</span> : null}
          {m.rating ? <span class="creditMeta"> · {m.rating}/10</span> : null}
        </button>
      ))}

      <div style="height: 240px;"></div>
    </div>
  </div>

  <style>
    .creditsContainer {
      border: 1px solid #ddd;
      border-radius: 18px;
      padding: 1rem;
    }
    
    @media (prefers-color-scheme: dark) {
      .creditsContainer {
        border-color: #444;
      }
    }
    
    .creditsHeader {
      display: flex;
      justify-content: space-between;
      gap: 1rem;
      flex-wrap: wrap;
      align-items: center;
      margin-bottom: 1rem;
    }
    
    .creditsTitle {
      font-size: var(--font-size-lg);
      font-weight: var(--font-weight-semibold);
    }
    
    .creditsControls {
      display: flex;
      gap: 0.5rem;
    }
    
    .creditsButton {
      padding: 0.5rem 1rem;
      border: 1px solid #ddd;
      border-radius: 999px;
      background: #fff;
      color: #111;
      font-size: var(--font-size-sm);
      font-weight: var(--font-weight-medium);
      cursor: pointer;
      transition: background 0.2s, border-color 0.2s;
    }
    
    .creditsButton:hover {
      background: #f5f5f5;
    }
    
    @media (prefers-color-scheme: dark) {
      .creditsButton {
        border-color: #444;
        background: #1a1a1a;
        color: #fff;
      }
      
      .creditsButton:hover {
        background: #2a2a2a;
      }
    }
    
    .creditsViewport {
      height: 420px;
      overflow: hidden;
      border-radius: 14px;
      background: linear-gradient(to bottom, #0b0b0b, #111);
      color: #fff;
      position: relative;
      border: 1px solid rgba(255,255,255,.12);
    }
    
    .creditsRoll {
      animation: roll 30s linear infinite;
      will-change: transform;
    }
    
    @keyframes roll {
      from { transform: translateY(0); }
      to { transform: translateY(-60%); }
    }
    
    .creditLine {
      display: block;
      width: 100%;
      background: transparent;
      border: 0;
      color: inherit;
      padding: 0.75rem 0;
      cursor: pointer;
      text-align: center;
      font-size: var(--font-size-base);
      transition: opacity 0.2s;
    }
    
    .creditLine:hover {
      opacity: 0.85;
    }
    
    .creditTitle {
      font-weight: var(--font-weight-semibold);
    }
    
    .creditMeta {
      opacity: 0.7;
      font-size: var(--font-size-sm);
    }
  </style>

  <script is:inline>
    (function () {
      var roll = document.getElementById("creditsRoll");
      var pause = document.getElementById("creditsPause");
      var play = document.getElementById("creditsPlay");

      if (pause && roll && play) {
        pause.addEventListener("click", function () {
          roll.style.animationPlayState = "paused";
          pause.style.display = "none";
          play.style.display = "inline-block";
        });

        play.addEventListener("click", function () {
          roll.style.animationPlayState = "running";
          play.style.display = "none";
          pause.style.display = "inline-block";
        });
      }

      // IMPORTANT: scope to this component so we don't accidentally miss nodes
      var root = roll ? roll.parentElement : document;
      var lines = root.querySelectorAll(".creditLine");

      lines.forEach(function (btn) {
        btn.addEventListener("click", function () {
          var tid = btn.getAttribute("data-template");
          if (!tid) {
            console.warn("[CreditsRoll] missing data-template on button");
            return;
          }

          var tpl = document.getElementById(tid);
          if (!tpl) {
            console.warn("[CreditsRoll] template not found:", tid);
            if (window.__openModal) window.__openModal("<p>Template not found: <code>" + tid + "</code></p>");
            else alert("Template not found and __openModal is undefined. Check Modal.astro.");
            return;
          }

          var html = "";
          if (tpl.tagName === "TEMPLATE") {
            var frag = tpl.content.cloneNode(true);
            var container = document.createElement("div");
            container.appendChild(frag);
            html = container.innerHTML;
          } else {
            html = tpl.innerHTML;
          }

          if (window.__openModal) {
            window.__openModal(html);
          } else {
            console.warn("[CreditsRoll] window.__openModal is undefined");
            alert("__openModal is undefined — Modal.astro script didn't run.");
          }
        });
      });
    })();
  </script>
</div>
