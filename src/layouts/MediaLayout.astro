---
import BaseLayout from "./BaseLayout.astro";
import MediaNav from "../components/media/MediaNav.astro";

const { title } = Astro.props;
---

<BaseLayout title={title}>
  <div class="media-container">
    <a href="/outside/" class="back-link">‚Üê Back</a>
    <MediaNav />

    <main class="media-main">
      <slot />
    </main>
  </div>
</BaseLayout>

<style>
  .media-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1.5rem;
  }
  
  .back-link {
    display: inline-block;
    font-size: var(--font-size-base);
    color: inherit;
    opacity: 0.8;
    margin-bottom: 1.5rem;
    transition: opacity 0.2s;
  }
  
  .back-link:hover {
    opacity: 1;
    text-decoration: underline;
  }
  
  .media-main {
    margin-top: 2rem;
  }
  
  @media (max-width: 768px) {
    .media-container {
      padding: 1.5rem 1rem;
    }
  }
</style>
